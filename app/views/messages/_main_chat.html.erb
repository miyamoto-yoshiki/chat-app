<div class="chat_header">
  <div class="left_header">
    <div class="overview">チャットルーム概要</div>
  </div>
  <div class="right_header">
    <div class="chat_end">
      <a href="#">チャットを終了する</a>
    </div>
  </div>
</div>


<div class="messages">
  <div class="message">
    <div class="name_time">
      <div class="name">YOSHIKI</div>
      <div class="time">2020/10/27(The)20:00:00</div>
    </div>
    <div class="text">こんにちは</div>
  </div>
  <div class="message">
    <div class="name_time">
      <div class="name">ASAHI</div>
      <div class="time">2020/10/27(The)20:10:30</div>
    </div>
    <div class="text">いえい</div>
  </div>
</div>

<%= form_with model: [@room, @message], class: 'form', local: true do |f| %>
  <div class="form-input">
    <%= f.text_field :content, class: 'message_form', placeholder: 'type a message' %>
    <label class="form-image">
      <span class="image-file">画像</span>
      <%= f.file_field :image, class: 'hidden' %>
    </label>
  </div>
  <%= f.submit '送信', class: 'send' %>
<% end %>





